{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/api/FiveMinuteGames.Api.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile",
            "options": {
                "env": {
                    "DOTNET_GENERATE_ASPNET_CERTIFICATE": "false"
                }
            }
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/api/FiveMinuteGames.Api.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile",
            "options": {
                "env": {
                    "DOTNET_GENERATE_ASPNET_CERTIFICATE": "false"
                }
            }
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/api/FiveMinuteGames.Api.csproj",
                "--urls",
                "https://localhost:5001"
            ],
            "problemMatcher": "$msCompile",
            "options": {
                "env": {
                    "DOTNET_GENERATE_ASPNET_CERTIFICATE": "false",
                    "ASPNETCORE_URLS": "https://localhost:5001"
                }
            }
        }
    ]
}